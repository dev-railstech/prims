<h1>Listing bills</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Contract</th>
      <th>Period</th>
      <th>Item</th>
      <th>Type</th>
      <th>Collect</th>
      <th>Discount</th>
      <th>Unique</th>
      <th>Number</th>
      <th>Yr</th>
      <th>Qty</th>
      <th>Vat</th>
      <th>Closed</th>
      <th>Val</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.company_id %></td>
        <td><%= bill.contract_id %></td>
        <td><%= bill.period %></td>
        <td><%= bill.item_id %></td>
        <td><%= bill.type %></td>
        <td><%= bill.collect %></td>
        <td><%= bill.discount %></td>
        <td><%= bill.unique %></td>
        <td><%= bill.number %></td>
        <td><%= bill.yr %></td>
        <td><%= bill.qty %></td>
        <td><%= bill.vat %></td>
        <td><%= bill.closed %></td>
        <td><%= bill.val %></td>
        <td><%= bill.date %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

