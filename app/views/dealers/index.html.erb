<h1>Listing dealers</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Add 1</th>
      <th>Add 2</th>
      <th>Add 3</th>
      <th>Post code</th>
      <th>Dx</th>
      <th>Fax</th>
      <th>Tel</th>
      <th>Email 1</th>
      <th>Email 2</th>
      <th>Email 3</th>
      <th>Date on</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.code %></td>
        <td><%= dealer.name %></td>
        <td><%= dealer.add_1 %></td>
        <td><%= dealer.add_2 %></td>
        <td><%= dealer.add_3 %></td>
        <td><%= dealer.post_code %></td>
        <td><%= dealer.dx %></td>
        <td><%= dealer.fax %></td>
        <td><%= dealer.tel %></td>
        <td><%= dealer.email_1 %></td>
        <td><%= dealer.email_2 %></td>
        <td><%= dealer.email_3 %></td>
        <td><%= dealer.date_on %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

