<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @let_types.each do |let_type| %>
      <tr>
        <td><%= let_type.type %></td>
        <td><%= let_type.description %></td>
        <td><%= link_to 'Show', let_type %></td>
        <td><%= link_to 'Edit', edit_let_type_path(let_type) %></td>
